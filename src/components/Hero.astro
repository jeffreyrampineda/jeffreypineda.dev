---
import { Image } from 'astro:assets';

const socialLinks = [
  {
    name: 'instagram',
    href: 'https://www.instagram.com/jeffreyrampineda/',
  },
  {
    name: 'stackoverflow',
    href: 'https://stackoverflow.com/users/8550657/jeffrey-ram/',
  },
  {
    name: 'github',
    href: 'https://github.com/jeffreyrampineda/',
  },
  {
    name: 'linkedin',
    href: 'https://www.linkedin.com/in/jeffreyrampineda/',
  },
];
---

<section id="hero" class="container mx-auto px-3 md:px-6 xl:px-32 h-screen">
  <div class="h-full flex flex-col justify-center">
    <div class="flex flex-col lg:flex-row items-start gap-8">
      <div class="grow lg:w-1/2 flex flex-col gap-6">
        <h1 class="text-5xl md:text-7xl hover-scale font-bold">
          Jeffrey Ram Pineda
        </h1>
        <div class="flex flex-row gap-4">
          {
            socialLinks.map((item) => (
              <a href={item.href}>
                <Image
                  class="invert-[.5] hover:scale-125 transition-all duration-300"
                  src={`/assets/icons/icon_${item.name}.svg`}
                  alt={item.name}
                  width={24}
                  height={24}
                />
              </a>
            ))
          }
        </div>
      </div>
      <div class="grow lg:w-1/2 flex flex-col gap-6">
        <h2 class="text-3xl md:text-4xl hover-scale">Full Stack Developer</h2>
        <div>
          <h3 class="text-gray-500 hover-scale">
            HTML / CSS / SASS & SCSS / React & Next.js
          </h3>
          <h3 class="text-gray-500 hover-scale">
            MongoDB / PostgreSQL / MySQL / SQLite
          </h3>
          <h3 class="text-gray-500 hover-scale">MEAN & JAMSTACK Experience</h3>
        </div>
        <div>
          <p class="hover-scale">
            Experience in designing and developing user interfaces, testing &
            debugging.
          </p>
          <p class="hover-scale">
            Able to work independently and within a team.
          </p>
          <p class="hover-scale">
            Creating clean, testable, maintainable and functional code is the
            highest priority.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
