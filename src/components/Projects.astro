---
import { Image } from 'astro:assets';

const projectsList = [
  {
    id: '1',
    title: 'Kochii',
    technologies: 'Angular / ExpressJS / MongoDB',
    description:
      'Simplify your day to day life by letting Kochii assist you in managing your pantry cabinets and cooking ingredients.',
    link: 'https://www.kochii.app/',
    github: 'https://github.com/jeffreyrampineda/kochii',
    imgSrc: '/assets/project_images/kochii-preview.jpg',
    imgAlt: "Kochii's landing page on a laptop",
  },
  {
    id: '2',
    title: 'Wikka: Interactive way to practice Japanese',
    technologies: 'React / SASS / Vite',
    description:
      'Build your Japanese reading skills through hands-on exercises with engaging stories.',
    link: 'https://wikka.netlify.app/',
    github: 'https://github.com/jeffreyrampineda/wikka',
    imgSrc: '/assets/project_images/wikka-preview.jpg',
    imgAlt: 'A typewriter',
  },
  {
    id: '3',
    title: 'Takugen',
    technologies: 'Python',
    description:
      "Translates keystrokes to the specified language in relation to the English alphabet's phonetics.",
    link: '',
    github: 'https://github.com/jeffreyrampineda/takugen',
    imgSrc: '/assets/project_images/takugen-preview.jpg',
    imgAlt: 'Roman alphabet translated to hiragana with Takugen',
  },
];
---

<section
  class="container max-w-6xl mx-auto px-3 md:px-6 text-primary font-extralight"
>
  <h2 class="text-4xl md:text-5xl mb-8">Projects</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {
      projectsList.map((project) => (
        <div class="hover-scale">
          <Image
            class="shadow-lg mb-4"
            src={project.imgSrc}
            alt={project.imgAlt}
            width={500}
            height={500}
            style={{
              width: '100%',
              height: 'auto',
            }}
          />
          <div class="flex flex-col gap-4">
            <h4 class="text-2xl font-semibold">{project.title}</h4>
            <p class="text-gray-500">{project.technologies}</p>
            <p>{project.description}</p>
            <div class="flex gap-2">
              {project.link && (
                <a
                  href={`${project.link}`}
                  class="cursor-pointer bg-sky-600 text-white font-bold py-2 px-4 rounded hover:shadow-lg"
                >
                  Live
                </a>
              )}
              {project.github && (
                <a
                  href={`${project.github}`}
                  class="cursor-pointer bg-primary text-white font-bold py-2 px-4 rounded hover:shadow-lg"
                >
                  Github
                </a>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
